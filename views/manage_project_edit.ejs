<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <%- include ('templates/head') %>
    <script type="text/javascript" src="/js/upload_picture.js"></script>
</head>

<body>
  <%- include ('templates/nav_manage') %>

    <div class="manage">
      <h1>編輯專案計畫資料</h1>

      <form method="POST" class="manage__edit" action="/manage/project/add">
        <!-- start new project -->
      <div class="projectInner">
        <div class="twins">
              <div>
                    <h2>計畫所屬單位：</h2>
              </div>
              <div>
                  <input type="text" name="project_company" id="project_company" value="<%= project.project_company %>"/>    
              </div>
              <div>
                    <h2>計畫名稱：</h2>
              </div>
              <div>
                    <input type="text" name="project_name" id="project_name" value="<%= project.project_name %>"/>
              </div>
        </div>

        <div class="twins">
              <div>
                    <h2>開始年：</h2>
              </div>
              <div>
                <input type="number" id="start_year" name="start_year" min="1990" max="2099" step="1" placeholder="西元年(ex:1999)" value="<%= project.start_year.substring(0,4) %>"/>    
              </div>
              <div>
                    <h2>結束年：</h2>
              </div>
              <div>
                <input type="number" id="end_year" name="end_year" min="1990" max="2099" step="1" placeholder="西元年(ex:1999)" value="<%= project.end_year.substring(0,4) %>"/>
              </div>
        </div>
      </div>
        <!-- end new project -->
    <div class="remind">
      <% if (errorMessage[0]) { %>
        <%= errorMessage %>
        <% } %>
    </div>

    <div class="post__btn">
      <button type="submit" class="edit-post__btn">送出</button>
      <a class="return-btn" href="/manage/project">返回</a>
    </div>
    </form>
  </div>
</body>

</html>