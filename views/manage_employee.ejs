<!DOCTYPE html>
<html lang="zh-TW">
  <head>
    <%- include ('templates/head') %>
  </head>

  <body>
    <%- include ('templates/nav_manage') %>
    
    <div class="manage">

      <h1>員工資料管理</h1>

      <div class="manage__title">
        <a href="/manage/employee/add">新增員工資料</a>
      </div>
      
      <div class="manage__list menu">
        
          <div class="container">
            <!--<h2>Responsive Tables Using LI</h2>-->
            <ul class="responsive-table">
              <li class="table-header">
                <div class="col col-1">姓名</div>
                <div class="col col-2">英文姓名</div>
                <div class="col col-3">職稱</div>
                <div class="col col-4">功能</div>
              </li>
              <% const job_title_arr = ['總經理', '副總經理', '協理', '研發經理', '經理', '高級資深工程師', '資深工程師', '系統工程師', '前端工程師', '財務會計經理', '會計']; %>
              <% employee.forEach(employee => { %>
              <li class="table-row">
                <div class="col col-1" data-label="Job Id"><%= employee.name %></div>
                <div class="col col-2" data-label="Customer Name"><%= employee.english_name %></div>
                <div class="col col-3" data-label="Amount"><%= job_title_arr[employee.job_title] %></div>
                <div class="col col-4" data-label="Payment Status">
                  <div class="function">
                    <div class="edit">
                      <a href="/manage/employee/edit/<%= employee.uid %>">編輯</a>
                    </div>
                    <div class="delete">
                      <form action="/manage/employee/delete"  method="POST">
                        <input name="id" hidden value="<%= employee.uid %>" />
                        <button type="submit">刪除</button>
                      </form>
                    </div>
                </div>
                </div>
              </li>
              <% }) %>
            </ul>
          </div>   
      
      </div>
    </div>
  </body>
</html>